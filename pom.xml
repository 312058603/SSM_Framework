<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.wpx</groupId>
    <artifactId>SSM_Framework</artifactId>
    <packaging>war</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>SSM_Framework Maven Webapp</name>
    <url>http://maven.apache.org</url>

    <properties>
        <!-- spring版本号 -->
        <spring.version>4.3.9.RELEASE</spring.version>
        <!-- mybatis版本号 -->
        <mybatis.version>3.4.4</mybatis.version>
        <!-- spring-mybatis版本号 -->
        <spring-mybatis.version>1.3.1</spring-mybatis.version>
        <!-- mysql驱动版本号 -->
        <mysql-driver.version>5.1.43</mysql-driver.version>
        <!-- 数据库连接版本号 -->
        <com.mchange.version>0.9.5.2</com.mchange.version>
        <!-- log4j日志包版本号 -->
        <log4j.version>1.2.17</log4j.version>
        <!-- slf4j日志包版本号 -->
        <slf4j.version>1.7.18</slf4j.version>
    </properties>

    <dependencies>

        <!--配置测试Junit包-->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>

        <!--配置JavaEE7.0包-->
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-api</artifactId>
            <version>7.0</version>
            <scope>provided</scope>
        </dependency>

        <!-- spring4所有核心包 -->
        <!--spring-aop-->
        <!--spring-aspects-->
        <!--spring-beans-->
        <!--spring-context-->
        <!--spring-context-support-->
        <!--spring-core-->
        <!--spring-expression-->
